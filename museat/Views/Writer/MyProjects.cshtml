@model IEnumerable<museat.Models.Collaboration>

@{
    ViewData["Title"] = "Projelerim";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-music-note-list"></i> Katıldığım Projeler</h2>
        <span class="badge bg-dark">Toplam: @Model.Count() Proje</span>
    </div>
    <hr />

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-header bg-white border-bottom-0 pt-3">
                        <h5 class="card-title text-primary mb-0">
                            <i class="bi bi-vinyl"></i> @(item.Beat?.Name ?? "İsimsiz Beat")
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="text-muted small mb-3">Tür: @(item.Beat?.Genre ?? "Belirtilmemiş")</p>

                        <div class="p-2 border rounded bg-light mb-3">
                            <label class="small fw-bold d-block mb-1">Durum:</label>
                            @if (item.IsApproved)
                            {
                                <span class="badge bg-success"><i class="bi bi-check-circle"></i> Prodüktör Onayladı</span>
                                <p class="small text-success mt-2 mb-0">Şimdi şarkını kaydedip aşağıdan yükleyebilirsin.</p>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark"><i class="bi bi-hourglass-split"></i> Onay Bekleniyor</span>
                                <p class="small text-muted mt-2 mb-0">Prodüktör onayladığında dosya yükleme alanı açılacaktır.</p>
                            }
                        </div>

                        @if (item.IsApproved)
                        {
                            @* BEAT DİNLEME ALANI *@
                            <div class="mb-4">
                                <label class="small fw-bold">Beat'i Dinle ve Üzerine Oku:</label>
                                <audio controls class="w-100 mt-1">
                                    <source src="@item.Beat?.AudioFilePath" type="audio/mpeg">
                                </audio>
                            </div>

                            @* FİNAL ŞARKI YÜKLEME FORMU *@
                            <div class="border-top pt-3">
                                @if (string.IsNullOrEmpty(item.FinalSongPath))
                                {
                                    <form asp-controller="Writer" asp-action="UploadFinalSong" method="post" enctype="multipart/form-data">
                                        <input type="hidden" name="collabId" value="@item.Id" />
                                        <div class="mb-3">
                                            <label class="form-label small fw-bold text-danger">Biten Şarkıyı Yükle (MP3/WAV):</label>
                                            <input type="file" name="finalFile" class="form-control form-control-sm" accept=".mp3,.wav" required />
                                        </div>
                                        <button type="submit" class="btn btn-dark btn-sm w-100">
                                            <i class="bi bi-cloud-arrow-up"></i> Projeyi Tamamla ve Gönder
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <div class="alert alert-success d-flex align-items-center py-2">
                                        <i class="bi bi-check-all me-2"></i> <div>Şarkın başarıyla yüklendi!</div>
                                    </div>
                                    <label class="small fw-bold">Senin Vokalli Versiyonun:</label>
                                    <audio controls class="w-100 mt-1">
                                        <source src="@item.FinalSongPath" type="audio/mpeg">
                                    </audio>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>