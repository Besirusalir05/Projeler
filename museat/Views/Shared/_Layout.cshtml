<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - museat</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/museat.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-boombox me-2"></i>MUSEAT
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door"></i> Ana Sayfa
                            </a>
                        </li>

                        @* GİRİŞ YAPMIŞ KULLANICILAR İÇİN ROL KONTROLÜ *@
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("Producer"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-primary fw-bold" asp-controller="Producer" asp-action="Upload">
                                        <i class="bi bi-cloud-arrow-up"></i> Beat Yükle
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Producer" asp-action="MySales">
                                        <i class="bi bi-graph-up-arrow"></i> Satışlarım/Onaylar
                                    </a>
                                </li>
                            }

                            @if (User.IsInRole("Writer"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-success fw-bold" asp-controller="Writer" asp-action="MyProjects">
                                        <i class="bi bi-journal-music"></i> Projelerim
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Home" asp-action="Index">
                                        <i class="bi bi-search"></i> Beat Bul
                                    </a>
                                </li>
                            }
                        }
                    </ul>

                    @* Sağ Taraftaki Giriş/Kayıt Alanı *@
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-4 text-center text-md-start">
                    &copy; 2025 - <strong>MUSEAT</strong>
                </div>
                <div class="col-md-4 text-center my-3 my-md-0">
                    <i class="bi bi-headphones me-2"></i> Müzik İşbirliği Platformu
                </div>
                <div class="col-md-4 text-center text-md-end">
                    <a asp-area="" asp-controller="Home" asp-action="Privacy">
                        <i class="bi bi-shield-lock me-1"></i> Gizlilik Politikası
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>